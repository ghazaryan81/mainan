# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 1
insert_final_newline = true
trim_trailing_whitespace = true
selector_separator_newline = true
max_line_length = off
end_of_line = lf

[*.md]
indent_size = 1

[*.html]
indent_size = 1

[*.scss]
indent_size = 1

[*.css]
indent_size = 1

[*.sass]
indent_size = 1

[*.ts]
indent_size = 1

[*.tsx]
indent_size = 1

[*.js]
indent_size = 1

[*.jsx]
indent_size = 1

[*.json]
indent_size = 1

[*.xml]
indent_size = 1

[*.stylintrc]
indent_size = 1

[*.kit]
indent_size = 1

[*.editorconfig]
indent_size = 1

[*.gitignore]
indent_size = 1

[*.yml]
indent_style = space
indent_size = 1
